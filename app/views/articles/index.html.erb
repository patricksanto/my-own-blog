<%= link_to "new article", new_article_path if user_signed_in? %>

<h1>My new blogs</h1>
<h2>New in Tech</h2>

<% @articles.each do |article| %>
  <div class="px-4 py-2 my-2 border border-slate-500 rounded-xl">

    <h3><%= link_to article.title, article %></h3>
    <p><%= article.body %></p>

    <% if article.draft? %>
      <div class="bg-red-400 text-white rounded-full py-2 px-1 text-xs w-20 text-center shadow-xl">
        DRAFT
      </div>
    <% elsif article.scheduled? %>
      <p class="text-red-500">this article gonna be available in <%= article.published_at %></p>
    <% end %>
  </div>
<% end %>
